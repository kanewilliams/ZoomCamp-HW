{
    "name": "LLM-Zoomcamp",
    "image": "mcr.microsoft.com/devcontainers/python:3.9",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "installTools": true
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter"
            ]
        }
    },
    "postCreateCommand": "pip install numpy scipy pandas scikit-learn matplotlib jupyter groq openai",
    "remoteUser": "vscode"
}